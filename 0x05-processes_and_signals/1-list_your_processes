#!/usr/bin/env bash
# Display all running processes with specific formatting: user, start time (with seconds), and command

ps -eo user,lstart,cmd --no-headers --sort=start_time | awk '
BEGIN { print "USER STARTED CMD" }
{
    # Format the STARTED column: month day time (HH:MM:SS)
    printf "%s %s %s:%s:%s %s\n", $1, $3, $4, $5, $6, substr($0, index($0,$8))
}
'
